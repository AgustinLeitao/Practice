<%- include('includes/main.ejs') %>
      <h1 class="text-center mb-3">Members</h1>
      <form action="/api/members" method="POST" class="mb-4">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" class="form-control" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" name="email" class="form-control" />
        </div>
        <input
          type="submit"
          value="add member"
          class="btn btn-primary btn-block text-capitalize"
        />
      </form>
      <ul class="list-group">
        <% for(let member of members) { %>
            <li class="list-group-item"><%= member.name %>: <%= member.email %></li>
        <% } %>
      </ul>
    </div>
  </body>
</html>